@using X.PagedList;
@using X.PagedList.Mvc.Core
@model IEnumerable<Waterful.Core.DTO.ShareDto>

@{
    ViewData["Title"] = "分享统计 - 天使用户";
    ViewData["MenuId"] = "0601";
    var mobile = ViewData["mobile"] ?? "";
}
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3>@ViewData["Title"]</h3>
            <form asp-action="Index" method="get">
                <div class="col-md-3"><div class="form-group"><input type="text" name="mobile" class="form-control" placeholder="注册手机" value="@mobile" /></div></div>

                <div class="col-lg-4"><button type="submit" class="btn btn-default"><i class="fa fa-search"></i> 查询</button></div>
            </form>
        </div>
        <div class="box-body table-responsive">
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>用户账号</th>
                        <th>用户名</th>
                        <th>微信名</th>
                        <th>关注人数</th>
                        <th>邀请成功人数</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Mobile</td>
                            <td>@item.FullName</td>
                            <td>@item.NickName</td>
                            <td>@item.Count</td>
                            <td>@item.PayCount</td>
                            <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">查看</a></td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="box-footer">
            @Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p = p, mobile = mobile }))
        </div>
</div>
</section>
