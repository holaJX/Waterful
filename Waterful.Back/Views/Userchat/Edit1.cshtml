@model Waterful.Core.Models.Userchat

@{
    ViewData["Title"] = "编辑用户画像";
    ViewData["MenuId"] = "0700";
}
<section class="content">
    <div class="box box-info">
        <div class="box-header with-border">
            <h3>@ViewData["Title"]</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form asp-action="Edit1" class="form-horizontal">
            <div class="box-body">
                <input id="errorInfo" type="hidden" value="@ViewBag.ErrorInfo" />
                <div class="form-group">
                    <label class="col-md-2 control-label">姓名</label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">内容</label>
                    <div class="col-md-10">
                        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
              
                <div class="form-group">
                    <label class="col-md-2 control-label">备注</label>
                    <div class="col-md-10">
                        <script type="text/plain" id="myEditor" style="height:240px;width:100%;" asp-for="Remark" name="Remark">
                            @Html.Raw(Model.Remark)
                        </script>
                    </div>
                </div>

            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <button type="submit" id="btnSubmit" class="btn btn-primary" style="width: 80px;">保存</button>
                <a asp-action="Index" class="btn btn-primary" style="width: 80px;">返回</a>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>

</section>
@section scripts{
    <script src="~/lib/layer/build/layer.js"></script>
    <!-- 样式文件 -->
    <link href="~/lib/umeditor/themes/default/css/umeditor.css" rel="stylesheet" />
    <!-- 引入 etpl -->
    <script src="~/lib/umeditor/third-party/template.min.js"></script>
    <!-- 配置文件 -->
    <script src="~/lib/umeditor/umeditor.config.js"></script>
    <!-- 编辑器源码文件 -->
    <script src="~/lib/umeditor/umeditor.min.js"></script>
    <!-- 语言包文件 -->
    <script src="~/lib/umeditor/lang/zh-cn/zh-cn.js"></script>
    <script type="text/javascript">
        $(function () {
            var um = UM.getEditor('myEditor', {

            });

            //显示服务端验证的错误信息
            if ($("#errorInfo").val()) {
                layer.tips($("#errorInfo").val(), "#btnSubmit");
            };
        });

    </script>
}
